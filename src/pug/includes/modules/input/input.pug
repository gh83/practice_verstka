mixin input-text(labelInput,placeholderInput,capchaInput,value,active)
    .input-text
        label.label 
            h3=labelInput
            .capcha-input=capchaInput
            if active == true
                input.input.active(type=text placeholder=placeholderInput value=value)
            else
                input.input(type=text placeholder=placeholderInput value=value)

        