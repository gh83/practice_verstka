include ../../modules/checkbox/checkbox
include ../../modules/radio-button/radio-button
include ../../modules/toggle/toggle
include ../../modules/like/like
include ../../modules/rate/rate

.checkbox-inputs-wrapper    
    form(class='checkbox-inputs__checkbox' action="#")
        h3 CHECKBOX BUTTONS
        +checkbox('222px','checkbox-test-1','можно курить')
        +checkbox('222px','checkbox-test-2','можно с питомцами','checked')
        +checkbox('222px','checkbox-test-3','можно пригласить гостей (до 10 человек)','checked')
    form(class='checkbox-inputs__radio-buttons' action='#')
        h3 RADIO BUTTONS
        +radio-button('98px','radio-buttons-1','test','Мужчина','checked')
        +radio-button('98px','radio-buttons-2','test','Женщина')
    form(class='checkbox-inputs__toggle-buttons')
        h3 TOGGLE
        +toggle('260px','toggle-test-1','Получать спецпредложения','checked')
        +toggle('260px','toggle-test-1','Получать спецпредложения')
    .checkbox-inputs__like
        h3 LIKE BUTTON
        +like('test-like1','2')
        +like('test-like2','12','checked')
    .checkbox-inputs__rate
        h3 RATE BUTTON
        +rate('test-rate1',4)
        +rate('test-rate2',5)


  
